[template](!)
type = friend				; Type d’objet SIP, friend = utilisateur
host = dynamic				;  Vous pouvez vous connecter a ce compte SIP a partir de n’importe quelle adresse IP
dtmfmode = rfc2833
disallow = all				; Désactivation de tous les codecs ...
allow = ulaw				; ... Activation du codec µlaw
context = work				; Contexte (cf extensions.conf)
 
;[6001](template)			; Numéro SIP
;fullname = John DOE		; Prénom et NOM de l’utilisateur (ce qui sera afficher sur le téléphone lors d’un appel)
;username = jdoe			; Nom d’utilisateur
;secret=secret				; Mot de passe du compte SIP

